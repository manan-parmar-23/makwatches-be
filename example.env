# Server Configuration
PORT=8080
ENVIRONMENT=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
DATABASE_NAME=pehnaw

# Redis Configuration
REDIS_URI=localhost:6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=debug

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=firebase-admin.json
FIREBASE_BUCKET_NAME=your-firebase-bucket.appspot.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback
# Set these to the values from your Google Cloud Console credentials.
# IMPORTANT: In the Google Cloud Console you must add the frontend origins below to "Authorized JavaScript origins"
# and add the `GOOGLE_REDIRECT_URL` values to "Authorized redirect URIs".
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Local development callback (backend running on localhost)
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Example production values you should also add to Google Cloud Console:
# Authorized JavaScript origins (add both):
# https://mak-watches.vercel.app
# https://makwatches.in
# Authorized redirect URIs (add both):
# https://mak-watches.vercel.app/auth/google/callback
# https://makwatches.in/auth/google/callback

# Razorpay Configuration
RAZORPAY_KEY=your_razorpay_key
RAZORPAY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# AWS S3 Configuration
AWS_S3_ACCESS_KEY=your_aws_access_key
AWS_S3_SECRET_KEY=your_aws_secret_key
AWS_S3_REGION=ap-south-1
AWS_S3_BUCKET_NAME=pehnaw